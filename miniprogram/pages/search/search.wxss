/* pages/search/search.wxss */

page{
  background-color: #EAF0FB;
}

.area{
  width: 90%;
  margin-top: 30rpx;
  margin-left: 5%;
  margin-right: 5%;
  border: 4rpx solid #437dd4;
  border-radius: 10rpx;
  background-color: white;
}

.search_input{
  width: 80%;
  margin-left: 30rpx;
  height: 100rpx;
  font-size: 34rpx;
}

.search_img{
  height: 70rpx;
  width:70rpx;
  margin-right: 30rpx;
}

.area-title{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 4rpx solid #437dd4;
}

.title{
  margin-left: 30rpx;
  font-size: 34rpx;
}

.area-notfound{
  width: 100%;
  padding-top:280rpx;
  padding-bottom: 280rpx;
  text-align: center;
}

.word-line{
  width:90%;
  margin-left: 5%;
  margin-right: 5%;
  background-color: white;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  display: flex;
  justify-content: space-between; 
}

.word-content{
  width: 90%;
  display: flex;
  justify-content: space-between; 
}

.word-txt{
  padding-left: 20rxp;
  font-size: 36rpx;
  color: #437dd4;
}

.word-hot{
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-family: "serif";
  font-size: 36rpx;
  text-align: center;
  color: orange;
}

.word-img{
  width: 50rpx;
  height: 50rpx;
  padding-right: 20rpx;
}

.bottom-line{
  margin-top: 40rpx;
  padding-bottom: 80rpx;
  width: 100%;
  text-align: center;
}

.bottom-txt{
  font-size: 34rpx;
  color:#8a8a8a;
}

.buttom-button{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.bottom-click{
  background-color: #eaf0fb;
  text-decoration: underline;
}