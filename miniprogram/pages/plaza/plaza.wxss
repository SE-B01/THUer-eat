/* pages/appraise/appraise.wxss */
.comment_wrapper{
  display:flex;
  direction: row;
  justify-content:space-between;
}
.comment_info{
  max-width: 380rpx;
  border-radius:20rpx;
  background:white;
  border:2rpx solid rgb(65, 65, 65);
  margin: 5rpx;
  border-radius: 30rpx;
}

.comment_picture{
  max-width: 320rpx;
  border-radius: 20rpx;
  margin: 20rpx;
}

.comment_name{
  color: black;
  font-size: 40rpx;
}

.comment_text{
  margin:10rpx;
}

.comment_avatar{
  height: 60rpx;
  width: 60rpx;
  border-radius:50%;
}

.comment_username{
  margin:10rpx;
}

.comment_like{
  margin:10rpx;
  height: 40rpx;
  width: 40rpx;
}
