<!--pages/canteen.wxml-->
<view class="cu-bar bg-white margin-top">
  <view class="action">
    <text class="cuIcon-title text-pink"></text> 卡片式轮播
  </view>
</view>
<view class="padding bg-white solid-bottom">
<swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
  <swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
    <view class="swiper-item">
      <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
      <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
    </view>
  </swiper-item>
</swiper>
</view>
<view class="padding bg-white solid-bottom margin-top">
  <view class="canteen-info">
    <view class="grid col-2 margin-bottom">
      <view class="canteen-info-item">{{canteenInfo.name}}</view>
      <view class="canteen-info-item">￥{{canteenInfo.price}}/人</view>
    </view>
    <view class="grid col-1 margin-bottom">
      <view class="canteen-info-grade">
        <text class="cuIcon-favorfill lg text-yellow" wx:for="{{canteenInfo.grade}}"></text>
        <text class="cuIcon-favorfill lg text-gray" wx:for="{{5 - canteenInfo.grade}}"></text>
      </view>
    </view>
    <view class="grid col-4 margin-bottom">
      <view class="canteen-info-item">口味：{{4.7}}</view>
      <view class="canteen-info-item">环境：{{4.6}}</view>
      <view class="canteen-info-item">服务：{{4.8}}</view>
      <view class="canteen-info-item">食材：{{4.7}}</view>
    </view>
    <view class="grid col-1 margin-bottom">
      <view class="canteen-info-item">地址：{{canteenInfo.address}}</view>
    </view>
    <view class="grid col-1 margin-bottom">
      <view class="canteen-info-item">营业时间：{{canteenInfo.time}}</view>
    </view>
    <view class="grid col-2 margin-bottom">
      <view class="canteen-navigation">
        <button class="cu-btn block line-orange lg">
        <text class="cuIcon-location"></text>导航</button>
      </view>
    </view>
  </view>
</view>